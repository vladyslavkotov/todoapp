@model IEnumerable<WebApplication6.Models.ToDoItem>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

<p>
   <a asp-action="Create">
      <span class="material-symbols-outlined">
         add
      </span>
   </a>
</p>

<table class="table">
@foreach (var item in Model) {
      <tr class="item">
         <td class="col-button">
            @if (item.IsCompleted)
            {
               <form asp-action="Uncheck" asp-route-id="@item.ID">
                  <button type="submit">
                     <span class="material-symbols-outlined">
                        check_box
                     </span>
                  </button>
               </form>
            }
            else
            {
            <form asp-action="Check" asp-route-id="@item.ID">
               <button type="submit">
                  <span class="material-symbols-outlined">
                        check_box_outline_blank
                  </span>
               </button>
            </form>
            }
         </td>
         <td class="text">
                 <span>
                  @Html.DisplayFor(modelItem => item.Text)
                 </span>
            </td>
            <td class="created">
            @Html.DisplayFor(modelItem => item.Created)
         </td>
         <td class="col-button">
            <a asp-action="Edit" asp-route-id="@item.ID">
               <span class="material-symbols-outlined">
                  edit
               </span>
            </a>
         </td>
         <td class="col-button">
            <form asp-action="Delete" asp-route-id="@item.ID" class="delete-button">
               <button type="submit" value="Delete">
               <span class="material-symbols-outlined">
                  delete
               </span>
               </button>
            </form>
         </td>
        </tr>
}
</table>
